# Production Environment Variables
# Copy to .env.prod and fill in your actual values

# Docker Configuration
DOCKER_USERNAME=DOCKER_USERNAME
IMAGE_TAG=latest

# Database Configuration
DATABASE_NAME=mydb
DATABASE_USER=lap04
DATABASE_PASSWORD=your-strong-password-here
DATABASE_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
CONTENT_SERVICE_PORT=3002
PAYMENT_SERVICE_PORT=3003
AI_SERVICE_PORT=8000
AUDIO_SERVICE_PORT=8001

# JWT Configuration
JWT_SECRET=your-super-strong-jwt-secret-for-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-production-email@gmail.com
FROM_NAME=E-Learning AI Platform

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# Payment Providers
# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# MoMo Payment
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key

# ZaloPay
ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
HF_TOKEN=your-huggingface-token
ELEVEN_LABS_API_KEY=your-elevenlabs-api-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key 